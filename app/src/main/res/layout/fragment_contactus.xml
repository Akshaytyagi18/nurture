<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/backofabout"
    android:layout_height="match_parent"
    tools:context=".Contactus">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="The Contact Detalis is given below for Company :"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/imga1"
                android:gravity="left"
                android:padding="4dp"
                android:background="@color/yellow"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/sendEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/email"
                android:textColor="@color/blue"
                android:textSize="20dp"
                android:text="Send Email to Nurture"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="The Contact Detalis of the Core team members are given below :"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/imga2"
                android:gravity="left"
                android:padding="4dp"
                android:background="@color/yellow"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:layout_marginVertical="2dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/imga3"
                android:gravity="left"
                android:layout_marginVertical="2dp"
                android:padding="4dp"
                android:background="@color/yellow"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/imga4"
                android:gravity="left"
                android:padding="4dp"
                android:background="@color/yellow"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/imga5"
                android:gravity="left"
                android:padding="4dp"
                android:background="@color/yellow"
                android:textColor="@color/red"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_marginVertical="2dp"
                android:layout_marginHorizontal="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </ScrollView>

</FrameLayout>